<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_my_health_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    tools:context="eu.credential.app.patient.ui.myHealthRecords.MyHealthRecordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/health_record_logo"
            android:layout_gravity="center"
            android:layout_weight="100"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/health_records_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/event_button"
                    android:layout_width="257dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:background="@drawable/event_list_button"
                    android:contentDescription="@string/event_list" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/protocol_button"
                    android:layout_width="257dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:background="@drawable/protocol_button"
                    android:contentDescription="@string/protocol" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
